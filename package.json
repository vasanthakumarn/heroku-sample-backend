{
  "name": "heroku-sample-backend",
  "version": "1.0.0",
  "description": "sample heroku app",
  "scripts": {
    "start": "npm run serve",
    "serve": "node dist/server.js",
    "build": "npm run build-ts",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "nodemon dist/server.js",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"npm run watch-ts\" \"npm run watch-node\"",
    "test": "mocha --require ts-node/register --recursive \"./test/**/*.ts\" --timeout 10000",
    "postinstall": "npm run build",
    "clean-dist-windows": "del /S .\\dist",
    "clean-dist-linux": "rm -rf ./dist"
  },
  "dependencies": {
    "@sendgrid/client": "^6.3.0",
    "@types/lodash": "^4.14.122",
    "@types/pg": "^7.4.11",
    "appoptics-apm": "^5.9.4",
    "body-parser": "^1.18.3",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.4",
    "debug": "~2.6.9",
    "express": "~4.16.0",
    "express-jwt": "^5.3.1",
    "express-jwt-authz": "^1.0.0",
    "express-session": "^1.15.6",
    "jwks-rsa": "^1.3.0",
    "jwt-decode": "^2.2.0",
    "lodash": "^4.17.11",
    "morgan": "~1.9.0",
    "nodemailer": "^5.1.1",
    "pg": "^7.5.0",
    "smtp-server": "^3.5.0",
    "typescript-map": "0.0.7"
  },
  "devDependencies": {
    "@nmjs/tslint-config-node": "^2.0.0",
    "@types/chai": "^4.1.6",
    "@types/chai-http": "^3.0.5",
    "@types/express": "^4.16.0",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.11.6",
    "chai": "^4.2.0",
    "chai-http": "^4.2.0",
    "concurrently": "^4.0.1",
    "mocha": "^5.2.0",
    "nodemon": "^1.18.7",
    "proxyquire": "^2.1.0",
    "testdouble": "^3.8.2",
    "ts-lint": "^4.5.1",
    "ts-node": "^7.0.1",
    "tslint": "^5.13.0",
    "typescript": "^3.1.2"
  }
}
